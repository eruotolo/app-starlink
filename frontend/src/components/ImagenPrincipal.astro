---
import { Image } from "astro:assets";

import { fetchFromAPI, STRAPI_BASE_URL } from "../lib/conection";
const data = await fetchFromAPI('home');

---
<section class="mt-[-90px] z-10 relative">
    <div class="w-full h-screen">
            <Image
                src={`${STRAPI_BASE_URL}${data.slider[0].url}` || ''} 
                alt='Imagen principal'
                class="w-full h-full object-cover"
                inferSize={true}
            />
    </div>
    <div class="z-20 absolute items-center justify-center inset-0 flex">
        <div class="container mx-auto">
            <h1 class="text-white font-sans text-[72px] uppercase text-center ">
                {data.title}
            </h1>
            <h4 class="text-white font-sans text-center text-[2rem] font-light">
                {data.subtitle}
            </h4>
        </div>
    </div>
</section>
